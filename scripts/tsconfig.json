{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./lib/*"],
      "@/types/*": ["./types/*"],
      "@/config/*": ["./config/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": [
    "../lib/**/*",
    "../types/**/*", 
    "../config/**/*",
    "../utils/**/*",
    "./**/*"
  ],
  "exclude": ["node_modules"]
}
